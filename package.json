{
  "name": "@ufhealth/eslint-config-wp",
  "version": "1.0.0",
  "description": "Shareable EcmaScript standard for developing UF Health WordPress projects",
  "keywords": [
    "eslint",
    "eslint-config",
    "ufhealth",
    "wordpress"
  ],
  "contributors": [
    "Kyle Tucker <k.tucker@ufl.edu>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ufhealth/eslint-config-wp.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "jest",
    "watch": "jest --watch"
  },
  "dependencies": {
    "@ufhealth/eslint-config-standard": "^1.0.0",
    "eslint-plugin-react": "^7.12.4"
  },
  "devDependencies": {
    "eslint": "^5.0.0",
    "jest": "^23.4.1"
  },
  "peerDependencies": {
    "eslint": "^5.0.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)(spec|test).js"
    ],
    "verbose": true
  }
}
